{
  "name": "regtech-radar",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.2.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=web --filter=@regtech-radar/shared",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "migrate:collector": "cd apps/collector && alembic upgrade head",
    "migrate:web": "dotenv -e .env -- npm run migrate:deploy -w web",
    "migrate": "npm run migrate:web && npm run migrate:collector"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.0",
    "prettier": "^3.2.0",
    "turbo": "^2.3.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
